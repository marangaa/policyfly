datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  category    String
  filePath    String   // Path to template file in storage
  variables   Json     // Array of variables found in template
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  documents   Document[]
}

model Document {
  id         String   @id @default(cuid())
  name       String
  filePath   String   // Path to generated document
  template   Template @relation(fields: [templateId], references: [id])
  templateId String
  data       Json     // Data used to generate document
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
